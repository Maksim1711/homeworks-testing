{
	"plugins": [
		"prettier"
	],
	"extends": [
		"eslint:recommended",
		"parser:babel-eslint",
		"plugin:prettier/recommended"
	],
	"env": {
		"es6": true,
		"browser": true,
		"jest/globals": true,
		"node": true,
		"commonjs": true
	},
	"parserOptions": {
		"sourceType": "module"
	},
	"rules": {
		"no-unused-vars": "warn"
	},
	"overrides": [
		{
			"files": [
				"**/*.test.js"
			],
			"plugins": [
				"jest"
			],
			"extends": [
				"plugin:jest/recommended"
			],
			"rules": {
				"jest/prefer-expect-assertions": "off"
			}
		}
	]
}